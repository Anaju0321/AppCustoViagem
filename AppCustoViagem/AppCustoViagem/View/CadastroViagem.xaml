<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCustoViagem.View.CadastroViagem"
             BackgroundImage="form.png"
             Title="Novo Pedágio">



    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_ClickedAsync" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>

        <StackLayout Margin="30,100,30,100" >

           
                <Label Text="Localização:" 
                   FontSize="Large"/>
                <Entry x:Name="txt_localizacao" />

                <Label Text="Valor:" 
                       FontSize="Large"/>
                <Entry x:Name="txt_valor" />

            <Label Text="Usar Pedágio?" 
                       FontSize="Large"/>
            <Entry x:Name="txt_valido" />


        </StackLayout>

    </ContentPage.Content>


</ContentPage>